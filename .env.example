# AgroDeep Platform - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# PostgreSQL (dev with Docker: docker compose up -d postgres)
# Port 5435 = default exposed by docker-compose. Password must match POSTGRES_PASSWORD.
# If you get "password authentication failed", run in container:
#   docker exec -it AgriLogistic-postgres psql -U AgriLogistic -d postgres -c "ALTER USER AgriLogistic WITH PASSWORD 'AgriLogistic_secure_2026';"
# =============================================================================
DB_HOST=localhost
DB_PORT=5435
DB_USER=AgriLogistic
DB_PASSWORD=AgriLogistic_secure_2026
DATABASE_URL=postgresql://AgriLogistic:AgriLogistic_secure_2026@localhost:5435/AgriLogistic

# =============================================================================
# InfluxDB (optionnel – utilisé par Telegraf si vous lancez la stack IoT)
# Définir pour supprimer le warning "INFLUXDB_TOKEN variable is not set".
# En prod, générer un token depuis l’UI InfluxDB (Sources > Tokens).
# =============================================================================
INFLUXDB_TOKEN=
INFLUXDB_PASSWORD=influx_secure_2026

# Application
VITE_APP_NAME=AgroDeep
VITE_APP_VERSION=2.0.0

# API Configuration
# Use Kong API Gateway as the main entry point for all API requests
VITE_API_GATEWAY_URL=http://localhost:8000/api/v1
# Direct auth service URL (for health checks and fallback)
VITE_AUTH_SERVICE_URL=http://localhost:3001/api/v1
# Legacy - kept for backward compatibility (deprecated, use VITE_API_GATEWAY_URL instead)
VITE_API_URL=http://localhost:8000/api/v1

# Supabase (Backend) - Optional, if using Supabase
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-anon-key

# Auth Provider Configuration
# Options: 'real' (default), 'mock', 'supabase'
VITE_AUTH_PROVIDER=real

# Optional: Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false

# Mapbox Configuration
VITE_MAPBOX_TOKEN=your-mapbox-token


# =============================================================================
# MinIO Object Storage Configuration
# =============================================================================
# MinIO Root Credentials (change in production!)
MINIO_ROOT_USER=agrodeep
MINIO_ROOT_PASSWORD=minio_secure_2026

# MinIO Endpoint Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_NAME=agrodeep-assets

# MinIO Connection URL (for application use)
MINIO_URL=http://localhost:9000
MINIO_CONSOLE_URL=http://localhost:9001

# =============================================================================
# Production Service (Docker) - Port exposé ; si 3018 déjà utilisé, ex: 3019
# =============================================================================
# PRODUCTION_SERVICE_PORT=3018
