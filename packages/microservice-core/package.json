{
  "name": "@agrologistic/microservice-core",
  "version": "1.0.0",
  "description": "Shared middleware for AgroLogistic microservices",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": { "import": "./dist/index.js", "require": "./dist/index.js", "types": "./dist/index.d.ts" },
    "./tracing": { "import": "./dist/tracing.js", "require": "./dist/tracing.js", "types": "./dist/tracing.d.ts" }
  },
  "files": ["dist", "middleware"],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.21.0",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/resources": "^1.22.0",
    "@opentelemetry/semantic-conventions": "^1.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "express": ">=4.18.0"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/sdk-node": { "optional": true },
    "@opentelemetry/auto-instrumentations-node": { "optional": true }
  }
}
