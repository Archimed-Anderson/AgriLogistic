# Database Configuration
# Option 1: Use DATABASE_URL (recommended for Prisma)
DATABASE_URL="postgresql://agrodeep:agrodeep_secure_2026@localhost:5432/agrodeep_auth?schema=public"

# Option 2: Use individual variables (will be combined into DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agrodeep_auth
DB_USER=agrodeep
DB_PASSWORD=agrodeep_secure_2026

# JWT Configuration
JWT_ACCESS_SECRET=dev_access_secret_change_me_please_32_chars_minimum
JWT_REFRESH_SECRET=dev_refresh_secret_change_me_please_32_chars_minimum
